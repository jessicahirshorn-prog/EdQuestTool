{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/test", "dest": "/api/index.py" },
    { "src": "/api/status", "dest": "/api/index.py" },
    { "src": "/api/generate", "dest": "/api/index.py" },
    { "src": "/api/preview", "dest": "/api/index.py" },
    { "src": "/static/(.*)", "dest": "/public/static/$1" },
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
