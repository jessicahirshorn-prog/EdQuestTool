{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "static/**", "use": "@vercel/static" },
    { "src": "api/index.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/test", "dest": "/api/index.py" },
    { "src": "/api/status", "dest": "/api/index.py" },
    { "src": "/api/generate", "dest": "/api/index.py" },
    { "src": "/api/preview", "dest": "/api/index.py" },
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
